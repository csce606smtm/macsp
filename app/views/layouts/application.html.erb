<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Texas Auctioneer Association</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Texas Auctioneer Association', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <ul class="nav navbar-nav">
        <% if current_user %>
           <% if current_user.user_type == 'Admin' %>
             <li id="admin-nav"><%= link_to 'Admin Page', admin_index_path %></li>
             <li id="admin-setup-nav"><%= link_to 'Setup', admin_setup_path %></li>
           <% else %>
             <li><%= link_to 'Judge Page', judge_index_path %></li>
           <% end %> 
        <% else %>
          <li><%= link_to 'Log In', log_in_path %></li>
        <% end %>
      </ul>
      <% if current_user %>
        <ul class="nav navbar-nav pull-right">
          <li><span><%= current_user.name %></span></li>
          <li><%= link_to 'Log Out', log_out_path, method: :delete %></li>
        </ul>
      <% end %>
    </div>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <div class="col-sm-9">
    <%= yield %>
  </div>
  <%= render 'shared/current_users' %>
</div>

<div id="footer">
  <div class="container">
    <p class="text-muted">Texas Auctioneer Association</p>
  </div>
</div>

</body>
</html>
